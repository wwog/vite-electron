{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "types": ["node", "electron"],
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*.ts", "../utils/electron/main/path.ts"],
  "exclude": [
    "dist",
    "build",
    "coverage",
    "scripts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
}
